<section class="section">
  <div class="container">
    <h1 class="title is-1">Benefits</h1>
    <%= link_to "Add New Benefit", new_benefit_path, class: 'button is-link' %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody id="benefit-list">
        <% @benefits.each do |benefit| %>
          <tr>
            <td><%= benefit.name.titleize %></td>
            <td><%= benefit.category.titleize %></td>
            <td>
              <%= link_to edit_benefit_path(benefit) do %>
                <span class="icon"><i class="fas fa-edit alt"></i></span>
              <% end %>
            </td>
            <td>
              <%= link_to benefit_path(benefit), method: :delete, data: {confirm: 'Are you sure you want to delete this benefit?'} do %>
                <span class="icon"><i class="fas fa-trash-alt"></i></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
