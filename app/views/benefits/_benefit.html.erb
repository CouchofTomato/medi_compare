<section class="section">
  <div class="task-container columns is-multiline">
    <div class="card column is-one-third is-offset-one-third">
      <div class="card-content login">
        <h1 class="title is-2"><%= heading %></h1>
        <div>
          <%= render partial: 'shared/error_messages', locals: {object: benefit} -%>
        </div>
        <%= form_with model: benefit, local: true do |form| %>
          <div class="field">
            <%= form.label :name, class: 'label' %>
            <div class="control">
              <%= form.text_field :name, class: 'input' %>
            </div>
          </div>
          <div class="field">
            <%= form.label :category, class: 'label' %>
            <div class="control">
              <div class="select is-primary">
                <%= form.select :category do %>
                  <% @benefit_categories.each do |category| %>
                    <%= content_tag(:option, category.titleize, value: category) %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= form.submit 'Submit', class: 'button is-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
