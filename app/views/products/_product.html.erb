<section class="section">
  <div class="task-container columns is-multiline">
    <div class="card column is-one-third is-offset-one-third">
      <div class="card-content">
        <h1 class="title is-2"><%= heading %></h1>
        <div>
          <%= render partial: 'shared/error_messages', locals: {object: insurer} -%>
        </div>
        <%= form_with model: insurer, local: true do |form| %>
          <div class="field">
            <%= form.label :name, class: 'label' %>
            <div class="control">
              <%= form.text_field :name, class: 'input' %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= form.submit 'Submit', class: 'button is-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
